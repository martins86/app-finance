{
  "name": "app-finance",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://martins86.github.io/app-finance/",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^16.11.36",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-icons": "^4.3.1",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.6.4",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test-ci": "npm test -- --coverage --watchAll=false --testResultsProcessor jest-sonar-reporter",
    "eject": "react-scripts eject",
    "deploy": "gh-pages -b gh-pages -d build",
    "lint": "eslint --fix",
    "lint-report": "npm run lint -- -f json -o eslint-report.json",
    "prettier-write": "npx prettier --write --ignore-unknown .",
    "prettier-check": "npx prettier --check .",
    "pre-commit": "npx --no-install lint-staged",
    "pre-push": "npm run test-ci",
    "postinstall": "npx husky install && chmod ug+x .husky/*",
    "sonar-scanner": "node sonarqube-scanner.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "gh-pages": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "sonarqube-scanner": "^2.8.1"
  },
  "jest": {
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
